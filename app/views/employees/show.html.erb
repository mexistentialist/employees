<h1>Employees</h1>
<h3><%= link_to "New Employee", "/employees/new"%>
<hr>
<h2><%=@employee.full_name%></h2>

<ul>
	<li><%=@employee.email%></li>
	<li><%=@employee.job_title%></li>
	<li><%= @employee.address %></li>
	<li><%=@employee.salary%></li>
	<li><%= @employee.japan_number %></li>
	<li><%=@employee.gender%></li>
	<img src="<%=@employee.image%>">
</ul>

<p><%= @employee.bio %></p>

<h5>Groups:</h5>
<ul><% @groups.each do |group| %>
	<li><%= link_to group.name.titleize, "/employees?group=#{group.name}" %></li>
<% end %>
</ul>

<%= link_to "Home", "/"%>
<%= link_to "Edit", "/employees/#{@employee.id}/edit"%>
<%= link_to "Destroy", "/employees/#{@employee.id}", method: :delete, data:{confirm: "Are you sure?"} %>